{
  "name": "bundleme-gui",
  "version": "0.5.0",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable --publish never"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "electron": "^30.0.6",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.commenthq.bundleme",
    "productName": "CommentHQ BundleMe GUI",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      ".env.example"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "CommentHQ-BundleMe-GUI-${version}.exe"
    }
  }
}
