{
  "name": "bundleme-gui",
  "version": "0.5.0",
  "private": true,
  "description": "CommentHQ BundleMe GUI (Electron, portable build)",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:win:portable": "electron-builder -w --portable"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron": "^30.0.9",
    "fs-extra": "^11.2.0",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.commenthq.bundleme",
    "productName": "BundleMe GUI",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      ".env.example",
      "lib/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "artifactName": "BundleMe-GUI-${version}-portable.exe"
    }
  }
}
