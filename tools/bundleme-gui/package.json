{
  "name": "commenthq-bundleme-gui",
  "version": "0.6.0",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "electron .",
    "build:win": "electron-builder --win portable --publish never",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "electron": "^31.4.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.commenthq.bundleme",
    "productName": "CommentHQ BundleMe GUI",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "package.json"
    ],
    "win": {
      "target": [
        { "target": "portable", "arch": ["x64"] }
      ],
      "artifactName": "CommentHQ-BundleMe-GUI-${version}-portable.exe"
    }
  }
}
