{
  "name": "commenthq-bundleme-gui",
  "version": "0.5.1",
  "private": true,
  "description": "CommentHQ Bundle Me GUI (portable Windows builder)",
  "author": "Falcordog",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win portable --x64",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "adm-zip": "^0.5.12",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "node-fetch": "2.7.0",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.commenthq.bundleme",
    "productName": "CommentHQ BundleMe GUI",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "lib/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "CommentHQ-BundleMe-GUI-${version}-portable.exe"
    },
    "extraMetadata": {
      "name": "commenthq-bundleme-gui"
    }
  }
}
