{
  "name": "bundleme-gui",
  "version": "0.2.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -w --portable"
  },
  "devDependencies": {
    "electron": "^29.4.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.12",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "simple-git": "^3.25.0"
  },
  "build": {
    "appId": "com.commenthq.bundleme",
    "productName": "CommentHQ BundleMe",
    "directories": { "output": "dist" },
    "files": ["**/*", "!dist/**/*", "!node_modules/.cache/**/*"],
    "win": { "target": ["portable"] }
  }
}